%{
#include <stdio.h>
#include <stdbool.h>
int symtbl[26];
bool issym[26];
%}

%token DOUBLE NUMBER NAME EXP SQRT LOG

%%
statement_list : statement '\n' statement_list
   |
   ;

statement: NAME '=' expression
   | expression
   ;

expression: expression '+' T_NUMBER
   | expression '-' T_NUMBER
   | expression '+' T_DOUBLE
   | expression '-' T_DOUBLE
   | expression '+' T_NAME 
   | expression '-' T_NAME 
   | T_NUMBER
   | T_DOUBLE
   | T_NAME 
   | T_EXP '(' expression ')'
   | T_SQRT '(' expression ')'
   | T_LOG '(' expression ')'
   ;

%%

